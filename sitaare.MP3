<audio id="mySong" preload="auto" loop>
    <source src="sitaare.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<script>
    function startEverything() {
        const audio = document.getElementById('mySong');
        
        // Music Settings
        audio.volume = 0.7; // Sets volume to 70%
        
        // The play() function must be inside a button click to work
        audio.play().then(() => {
            console.log("Music is playing!");
        }).catch(error => {
            console.log("Browser blocked auto-play. Error:", error);
            alert("Please tap the screen to hear the music! ❤️");
        });

        // Hide button and show card
        document.getElementById('playBtn').style.display = 'none';
        document.getElementById('mainCard').style.display = 'block';
        
        // Start the heart animation
        setInterval(createHeart, 300);
    }
</script>
